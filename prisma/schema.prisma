generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  password      String?
  createdAt     DateTime  @default(now())
  accounts      Account[]
  sessions      Session[]
  teacher       Teacher?
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Teacher {
  id         String    @id @default(cuid())
  userId     String    @unique
  hourlyRate Int       @default(200000)
  createdAt  DateTime  @default(now())
  lessons    Lesson[]
  students   Student[]
  user       User      @relation(fields: [userId], references: [id])
}

model Student {
  id        String   @id @default(cuid())
  teacherId String
  name      String
  avatar    String?
  notes     String?
  createdAt DateTime @default(now())
  lessons   Lesson[]
  teacher   Teacher  @relation(fields: [teacherId], references: [id])
  reports   MonthlyReport[]
}

model Piece {
  id          String   @id @default(cuid())
  title       String
  description String?
  level       String?
  createdAt   DateTime @default(now())
  lessons     Lesson[]
}

model Lesson {
  id           String       @id @default(cuid())
  studentId    String
  teacherId    String
  date         DateTime
  duration     Int
  status       LessonStatus @default(COMPLETE)
  cancelReason String?
  pieceId      String?
  createdAt    DateTime     @default(now())
  piece        Piece?       @relation(fields: [pieceId], references: [id])
  student      Student      @relation(fields: [studentId], references: [id])
  teacher      Teacher      @relation(fields: [teacherId], references: [id])
  attendance   Attendance?
}

enum LessonStatus {
  COMPLETE
  MAKEUP
  CANCELLED
}

enum AttendanceStatus {
  PRESENT
  ABSENT
  MAKEUP
}

model Attendance {
  id        String           @id @default(cuid())
  lessonId  String           @unique
  date      DateTime
  status    AttendanceStatus
  actualMin Int
  reason    String?
  note      String?
  lesson    Lesson           @relation(fields: [lessonId], references: [id])
}

model MonthlyReport {
  id            String   @id @default(cuid())
  studentId     String
  month         Int 
  year          Int
  summary       String?
  comments      String?
  nextMonthPlan String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  student Student @relation(fields: [studentId], references: [id], onDelete: Cascade)

  @@unique([studentId, month, year])
}
