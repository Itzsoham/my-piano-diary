// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
    output   = "../generated/prisma"
}

datasource db {
    provider = "postgresql"
    // NOTE: When using mysql or sqlserver, uncomment the @db.Text annotations in model Account below
    // Further reading:
    // https://next-auth.js.org/adapters/prisma#create-the-prisma-schema
    // https://www.prisma.io/docs/reference/api-reference/prisma-schema-reference#string
    url      = env("DATABASE_URL")
}

//
// ----------------------
// AUTH MODELS
// ----------------------
//

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  password      String?

  accounts      Account[]
  sessions      Session[]

  teacher       Teacher?

  createdAt     DateTime  @default(now())
}

model Account {
  id                String   @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

//
// ----------------------
// APP MODELS
// ----------------------
//

model Teacher {
  id          String     @id @default(cuid())
  userId      String     @unique
  user        User       @relation(fields: [userId], references: [id])

  hourlyRate  Int        @default(200000) // VND per lesson
  students    Student[]
  lessons     Lesson[]

  createdAt   DateTime   @default(now())
}

model Student {
  id          String      @id @default(cuid())
  teacherId   String
  teacher     Teacher     @relation(fields: [teacherId], references: [id])

  name        String
  avatar      String?
  notes       String?

  lessons     Lesson[]

  createdAt   DateTime    @default(now())
}

//
// Song / Chapter / Piece Library (GLOBAL)
//
model Piece {
  id          String    @id @default(cuid())
  title       String
  description String?
  level       String?

  createdAt   DateTime  @default(now())

  lessons     Lesson[]
}

//
// Lesson = One calendar day entry
//
model Lesson {
  id          String       @id @default(cuid())

  studentId   String
  teacherId   String
  student     Student      @relation(fields: [studentId], references: [id])
  teacher     Teacher      @relation(fields: [teacherId], references: [id])

  date        DateTime
  duration    Int          // minutes (usually 60)

  status      LessonStatus @default(COMPLETE)
  cancelReason String?

  // optional: what song was taught today
  pieceId     String?
  piece       Piece?       @relation(fields: [pieceId], references: [id])

  createdAt   DateTime     @default(now())
}

enum LessonStatus {
  COMPLETE
  MAKEUP
  CANCELLED
}